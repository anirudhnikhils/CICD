pipeline {
  // Define agent with Docker container on Windows
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user docker'  // Use user with elevated Docker access
      args '-v /var/run/docker.sock:/var/run/docker.sock'  // Mount Docker socket
      // Consider adding a volume to share workspace directory between host and container (optional)
    }
  }

  // Stages
  stages {
    stage('Checkout') {
      steps {
        script {
          // Assuming Git is installed on Windows
         sh 'git clone https://github.com/anirudhnikhils/CICD.git'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"  // Optional if needed
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
          // Assuming workspace directory is mounted as a volume (optional)
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }
    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "CICD"
        GIT_USER_NAME = "anirudhnikhils"
      }
      steps {
        withCredentials([usernamePassword(credentialsId: 'github', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          sh '''
            git config user.email "anirudhnikhilsingh@gmail.com"
            git config user.name "Nikhil Singh"
            BUILD_NUMBER=${BUILD_NUMBER}
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests  # Assuming workspace is mounted
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml
            git add deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push origin HEAD:main  # Assuming origin is set for remote repository
          '''
        }
      }
    }
  }
}
