pipeline {
    agent any  // Use any available agent

    environment {
        REGISTRY_CREDENTIALS = credentials('docker-cred')  // Load credentials
    }

    stages {
        stage('Checkout') {
            steps {
                sh 'echo passed'
                git branch: 'main', url: 'https://github.com/anirudhnikhils/CICD'
            }
        }
        stage('Build and Package') {
            steps {
                sh 'docker build -t your-app-image1:latest .'  // Replace with your Docker image name
            }
        }
        stage('Docker Login and Push') {
            steps {
                sh '''
                    docker login -u $REGISTRY_CREDENTIALS_USR -p $REGISTRY_CREDENTIALS_PSW
                    docker push your-app-image1:latest  // Replace with your Docker image name
                '''
            }
        }
    }
}
